<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SubmitEmailActivity">

    <!--Para-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para: "
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="16dp"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/activity_submit_email_Email_Destinatario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="Endereço de email"/>

    <!--Assunto-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assunto:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="16dp"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/activity_submit_email_Email_Assunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="Assunto do Email"/>

    <!--Mensagem-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagem:"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="16dp"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/activity_submit_email_Email_Mensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="Introduza a mensagem que pretende enviar ao vendedor"
        android:lines="10"
        android:gravity="start"/>

    <!--Botão-->
    <Button
        android:id="@+id/activity_submit_email_botao_enviar_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Enviar Mensagem"
        android:textSize="20sp"
        android:layout_margin="20dp"/>

</LinearLayout>